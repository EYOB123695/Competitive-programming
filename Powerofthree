class Solution(object):
    def isPowerOfThree(self, n):
        """
        :type n: int
        :rtype: bool
        """
        
        if n==1:
            return True

        elif n<1:
            return False
        elif n %3==0:
            x= Solution()
            
            return x.isPowerOfThree(n//3)
            
        else:
            return False


