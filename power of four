class Solution(object):
    def isPowerOfFour(self, n):
        """
        :type n: int
        :rtype: bool
        """
        
       
        if n < 1:
            return False
        elif n== 1:
            return True
        elif n%4==0 : 
            x=Solution()
            return x.isPowerOfFour(n//4)
        else:
            return False
